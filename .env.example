APP_NAME="Nurul Ilmi Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

LOG_CHANNEL=stack
LOG_LEVEL=info

# Database (For Dokploy, you can link a MySQL service)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=nurul_ilmi
DB_USERNAME=dokploy
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=public

# Mail (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@nurul-ilmi.sch.id"
MAIL_FROM_NAME="${APP_NAME}"

# Docker Deployment Specific
RUN_MIGRATIONS=true

# Vite
VITE_APP_NAME="${APP_NAME}"
